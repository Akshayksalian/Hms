package com.hms.entities;

import java.io.Serializable;

import javax.json.bind.annotation.JsonbTransient;
import javax.persistence.Entity;
import javax.persistence.FetchType;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.JoinColumn;
import javax.persistence.ManyToOne;

/*
 *  Questionnaire Table will help to store the data from the 
 *  web site like basic information of the candidates.
 */
@Entity
public class Questionaire implements Serializable {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	private int id;

	private String answer;
	
	@ManyToOne(fetch = FetchType.LAZY)
	@JoinColumn(name="candidates_id",nullable = false,referencedColumnName = "candidates_id",foreignKey = "candidates_id")
	private Candidates candidates;

	public int getId() {
		return id;
	}

	public String getAnswer() {
		return answer;
	}

	public void setAnswer(String answer) {
		this.answer = answer;
	}

	@JsonbTransient
	public Candidates getCandidates() {
		return candidates;
	}

	public void setCandidates(Candidates candidates) {
		this.candidates = candidates;
	}

	@Override
	public String toString() {
		return "Questionaire [id=" + id + ", answer=" + answer + "]";
	}

}
