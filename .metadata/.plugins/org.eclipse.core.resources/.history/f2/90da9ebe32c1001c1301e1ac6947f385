package com.hms.dao;

import javax.persistence.EntityManager;
import javax.persistence.PersistenceContext;

import org.springframework.stereotype.Repository;

import com.hms.entities.Questionaire;

@Repository
public class QuestionaireDAOImpl implements QuestionaireDAO{

	@PersistenceContext
	private EntityManager em;
	
	@Override
	public Questionaire getAnswerById(int id) {
		Questionaire questionaire = em.find(Questionaire.class, id);
		return questionaire;
	}
	
	@Override
	public void addAnswer(Questionaire questionaire) {
		em.persist(questionaire);
	}

}
