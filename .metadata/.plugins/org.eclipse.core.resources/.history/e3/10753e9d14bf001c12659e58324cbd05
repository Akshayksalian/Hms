package com.hms.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.hms.dao.CandidatesDAO;
import com.hms.entities.Admin;

/*
 * 
 */
@Service
//@Transactional(readOnly = true)
public class CandidatesServiceImpl implements CandidatesService {

	@Autowired
	private CandidatesDAO dao;

	@Override
	public Admin getCandidatesById(int id) {
		Admin admin = dao.getCandidatesById(id);
		return admin;
	}
	
	@Override
	public List<Admin> getAllCandidates() {
		return dao.getAllCandidates();
	}

}
